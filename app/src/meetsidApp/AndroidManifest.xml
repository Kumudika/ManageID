<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.meetsid.userApp">

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.front" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="${appIcon}"
        android:roundIcon="${appIcon}"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_conf"
        android:supportsRtl="true"
        android:theme="@style/MyTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:label,android:allowBackup"
        tools:targetApi="n">
        <activity android:name=".Activities.DocCapturePage" />
        <activity android:name=".Activities.PasscodeSetupActivity" />
        <activity android:name=".Activities.FaceRegister" />
        <activity android:name=".Activities.StartingActivity" />
        <activity android:name=".Activities.ElectionMessage" />
        <activity
            android:name=".Activities.NavActivity"
            android:label="@string/title_activity_nav" />
        <activity
            android:name=".Activities.SplashActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.PassportDetails"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.PassportScanner"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.NicBackScanner"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.NicScanner"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.MobileVerification"
            android:launchMode="singleTop" />
        <activity
