<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme without ActionBar. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>
    </style>

    <!-- Profile page. -->

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorAccent">#546E7A</item>-->
        <item name="android:textColorPrimary">#37474F</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <!--<item name="fontPath" tools:targetApi="o">font/metropolis_regular</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/editTextStyle</item>
        <item name="android:textColor">@color/meetsid_text_grey</item>
        <item name="colorBackgroundFloating">@color/meetsid_white</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">@color/meetsid_white
        </item>
        <item name="colorAccent">@color/meetsid_grey2</item>
        <item name="android:labelTextSize">8sp</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/NavButtonPadding</item>
        <item name="colorControlActivated">@color/meetsid_line_grey</item>
        <item name="colorControlNormal">@color/meetsid_line_grey</item>
        <item name="android:textColorHint">@color/meetsid_grey2</item>
        <item name="colorError">@color/meetsid_orange</item>
        <item name="textInputStyle">@style/CustomFontTextInputLayout</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <!--<item name="alertDialogTheme">@style/meetsidDialog</item>-->
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:textColor">@color/meetsid_text_grey</item>
        <item name="android:color">@color/meetsid_text_grey</item>
        <item name="colorControlNormal">@color/meetsid_line_grey</item>
        <item name="colorControlActivated">@color/meetsid_green</item>
        <item name="android:textColorPrimary">@color/meetsid_text_grey</item>
        <item name="android:background">@drawable/edittext_line_selector</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/meetsid_white</item>
        <item name="android:fontFamily">@font/metropolis_extralight</item>
        <!--<item name="fontPath" tools:targetApi="o">font/metropolis_extralight</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_green_fill_shape</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="NavButtonPadding" parent="Widget.Design.BottomNavigationView">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <!--<item name="android:minWidth">10dp</item>-->
    </style>

    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/meetsid_blue</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="text_in_layout_hint_Style">
        <!--        <item name="android:textColor">@color/meetsid_green</item>-->
        <!--        <item name="android:textColorHighlight">@color/meetsid_green</item>-->
        <!--        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/meetsid_green</item>-->
        <!--        <item name="android:colorActivatedHighlight">@color/meetsid_green</item>-->
        <!--        <item name="android:gravity">bottom</item>-->
        <!--        <item name="android:clipToPadding">false</item>-->
        <!--        <item name="android:textSize">8sp</item>-->
        <item name="android:fontFamily">@font/metropolis_semibold</item>
    </style>

    <style name="CustomFontTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:gravity">bottom</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/meetsid_green</item>
        <item name="android:colorActivatedHighlight">@color/meetsid_green</item>
        <item name="android:defaultFocusHighlightEnabled" tools:targetApi="o">true</item>
        <item name="android:focusedByDefault" tools:targetApi="o">true</item>
        <item name="android:state_focused">false</item>
    </style>

    <style name="TextInputLayoutHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="TextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="defaultTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/meetsid_text_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/metropolis_extralight</item>
    </style>

    <!--<style name="metropolis_light">-->
    <!--<item name="android:fontFamily">@font/metropolis_extralight</item>-->
    <!--</style>-->

